	ctx.reply ('Right! You get 5 points!')' 
} else {
	ctx.reply ('No :( Give it a second try!')
	if (bot.hears('11')) {
	ctx.reply ('Right! You get 3 points!')' 
	else {ctx.reply('No worries! Next task is yours'} 
}
